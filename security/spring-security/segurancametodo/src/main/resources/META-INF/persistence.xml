<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

    <persistence-unit name="dbmubdv" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>java://comp/env/jdbc/dbmubdv</non-jta-data-source>
		
		<class>br.com.digicade.commons.map.model.vo.MapaKernelVO</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.OracleDialect" />
			<property name="hibernate.show_sql" value="${hibernate.show_sql}" />
			<property name="hibernate.format_sql" value="${hibernate.format_sql}" />
		</properties>
	</persistence-unit>
</persistence>