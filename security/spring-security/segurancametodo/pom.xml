	</dependencies>
	
    <repositories>
        <repository>
            <id>maven2-repository.dev.java.net</id>
            <name>Java.net repository</name>
            <url>http://download.java.net/maven/2</url>
        </repository>
    </repositories>	

	<profiles>
		<profile>
			<id>desenvolvimento</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<environment.name>desenvolvimento</environment.name>
				<filter.properties.file>src/main/environment/desenvolvimento/filter.properties</filter.properties.file>
			</properties>
		</profile>
		<profile>
			<id>homologacao</id>
			<properties>
				<environment.name>homologacao</environment.name>
				<filter.properties.file>src/main/environment/homologacao/filter.properties</filter.properties.file>
			</properties>
		</profile>
		<profile>
			<id>producao</id>
			<properties>
				<environment.name>producao</environment.name>
				<filter.properties.file>src/main/environment/producao/filter.properties</filter.properties.file>
			</properties>
		</profile>
		
	</profiles>

	<build>
		<finalName>geoestatistica</finalName>

		<filters>
			<filter>${filter.properties.file}</filter>
		</filters>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<containerConfigXML>${basedir}/src/main/environment/${environment.name}/context.xml</containerConfigXML>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<version>1.0</version>
				<configuration>
					<port>8085</port>
					<path>/${project.build.finalName}</path>
				</configuration>

				<dependencies>
					<dependency>
						<groupId>ojdbc</groupId>
						<artifactId>ojdbc</artifactId>
						<version>5</version>
					</dependency>
				</dependencies>
			</plugin>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.8</version>
				<configuration>
					<wtpversion>2.0</wtpversion>
					<wtpContextName>${project.build.finalName}</wtpContextName>
					<useProjectReferences>false</useProjectReferences>
					<additionalBuildcommands>
						<buildcommand>org.eclipse.wst.common.project.facet.core.builder</buildcommand>
					</additionalBuildcommands>
					<additionalProjectnatures>
						<projectnature>org.eclipse.wst.common.project.facet.core.nature</projectnature>
					</additionalProjectnatures>
				</configuration>
			</plugin>

		</plugins>
	</build>
</project>